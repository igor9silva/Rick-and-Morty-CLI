{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"lib": ["ES2022"],
		"moduleDetection": "force",
		"moduleResolution": "bundler",
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"allowImportingTsExtensions": false,
		"allowJs": false,
		"resolveJsonModule": true,
		"rootDir": "."
	},
	"include": ["src", "tests", "data"]
}
